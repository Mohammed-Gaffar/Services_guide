@model IEnumerable<Core.Entities.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row" style="justify-content:center;display:flex">
  <div style="width:50%;margin:6%">
        <div class="card card-primary">
            <div class="card-header">
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <th>اسم المستخدم</th>
                    <th>صلاحية المستخدم</th>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Role</td>
                                <td><a asp-action="Edit" asp-controller="Users" asp-route-id="@user.ID">Edit</a>  </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <a asp-action="Create" asp-controller="Users"><i class="fa fa-plus">adding user</i></a>
            </div>
        </div>
  </div>
</div>



@section scripts{
    <partial name="_NotificationPartial" />
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}